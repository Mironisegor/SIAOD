//Квадратный корень и квадратный квадрат

#include <iostream>
#include <cmath>

using namespace std;

double f(double x, double C) {
    return x * x + sqrt(x);
}
double binary_search(double C) {
    double left = 0.0;
    double right = C;
    double eps = 0.000001;
    while (right - left > eps) {
        double mid = (left + right) / 2.0;
        if (f(mid, C) < C) {
            left = mid;
        }
        else {
            right = mid;
        }
    }
    return left;
}

int main() {
    double C;
    cin >> C;
    cout << fixed << binary_search(C) << endl;
    return 0;
}
