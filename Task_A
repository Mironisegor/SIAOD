//Азартный Шрек

#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    int n, sum1=0, sum2=0;
    cin >> n;

    vector <int> arr(n);
 
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    sort(arr.begin(), arr.end());

    for (int i = 0; i < n; i++) {
        if (i < (n / 2)) {
            sum1 += arr[i];
        }
        else {
            sum2 += arr[i];
        }
    }

    cout << sum2 - sum1 << endl;
}
